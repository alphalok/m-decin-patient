<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartAnimatonActivity"
    android:background="#00f2fe"
    android:id="@+id/mainAnimation"
    >


    <ImageView
        android:id="@+id/cloud1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:src="@drawable/c1"
        />

    <ImageView
        android:id="@+id/cloud2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/cloud1"
        android:src="@drawable/c1" />

    <ImageView
        android:id="@+id/cloud3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/cloud1"
        android:src="@drawable/c1" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        app:lottie_autoPlay="true"
        android:elevation="5dp"
        app:lottie_rawRes="@raw/doctor" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Welcom"
        android:textColor="@color/Blue_light"
        android:textSize="25dp"
        android:textStyle="italic|bold" />



</RelativeLayout>