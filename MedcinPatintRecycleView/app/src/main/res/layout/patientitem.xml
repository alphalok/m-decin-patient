<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_margin="10dp"
    android:padding="50dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="20dp"
    android:layout_centerInParent="true"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/relativeLayoutP"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewFullN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Nom complet : "
            android:textSize="20dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textViewFullNom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/textViewFullN"
            android:text="name"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

        <TextView
        android:id="@+id/textViewCI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewFullN"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="CIN : "
        android:textSize="20dp"
        android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textViewMCIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewFullNom"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="CIN"
            android:textSize="20dp"
            android:textStyle="bold|italic" />


        <Button
            android:id="@+id/VoirDossierBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewMCIN"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/custtom_button_back"
            android:text="Voir dossier"
            android:textAllCaps="false"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/SendMessageBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewMCIN"
            android:layout_marginStart="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/VoirDossierBtn"
            android:background="@drawable/custtom_button_back"
            android:text="envoyer un message"
            android:textAllCaps="false"
            android:textStyle="bold|italic" />



    </RelativeLayout>


</androidx.cardview.widget.CardView>