<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterUserActivity"
    android:background="@drawable/gradient_background">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/editTextUserNumTel"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="100dp"
            android:background="@drawable/custum_edittext_background"
            android:ems="10"
            android:hint="@string/num_téléphone"
            android:inputType="number"
            android:padding="10dp"
            android:textColorHint="@color/white"
            android:textSize="18sp"
            app:hintTextColor="@color/white" />
        <EditText
            android:id="@+id/editTextUserNumOrdre"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/editTextUserNumTel"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:ems="10"
            android:hint="@string/Num_ordre"
            android:inputType="text"
            android:padding="10dp"
            android:textColorHint="@color/white"
            android:textSize="18sp"
            app:hintTextColor="@color/white"
            android:visibility="gone"
            android:background="@drawable/custum_edittext_background"/>


        <ProgressBar
            android:id="@+id/userProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/progress_back"
            />

        <EditText
            android:id="@+id/editTextPatientUserCIN"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/editTextUserNumTel"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custum_edittext_background"
            android:ems="10"
            android:hint="@string/cin"
            android:inputType="text"
            android:padding="10dp"
            android:textColorHint="@color/white"
            android:textSize="18sp"
            android:visibility="visible"
            app:hintTextColor="@color/white" />

        <EditText
            android:id="@+id/editTextUserFullName"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/editTextUserNumTel"
            android:layout_marginStart="20dp"
            android:layout_marginTop="108dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custum_edittext_background"
            android:ems="10"
            android:hint="@string/nom_complet"
            android:inputType="text"
            android:padding="10dp"
            android:textColorHint="@color/white"
            android:textSize="18sp"
            android:visibility="visible"
            app:hintTextColor="@color/white" />

        <EditText
            android:id="@+id/editTextPatientUserAge"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/editTextUserFullName"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custum_edittext_background"
            android:ems="10"
            android:hint="@string/Age"
            android:inputType="number"
            android:padding="10dp"
            android:textColorHint="@color/white"
            android:textSize="18sp"
            android:visibility="visible"
            app:hintTextColor="@color/white" />

        <EditText
            android:id="@+id/editTextPatientUserEmail"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/editTextPatientUserAge"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custum_edittext_background"
            android:ems="10"
            android:hint="@string/email"
            android:inputType="text"
            android:padding="10dp"
            android:textColorHint="@color/white"
            android:textSize="18sp"
            android:visibility="visible"
            app:hintTextColor="@color/white" />

        <EditText
            android:id="@+id/editTextPatientUserPassword"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/editTextPatientUserEmail"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custum_edittext_background"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColorHint="@color/white"
            android:textSize="18sp"
            android:visibility="visible"
            app:hintTextColor="@color/white" />

        <EditText
            android:id="@+id/editTextPatientUserConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/editTextPatientUserPassword"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custum_edittext_background"
            android:ems="10"
            android:hint="@string/re_password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColorHint="@color/white"
            android:textSize="18sp"
            android:visibility="visible"
            app:hintTextColor="@color/white" />

        <Button
            android:id="@+id/patientUserRegisterBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextPatientUserConfirmPassword"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custtom_button_back"
            android:text="@string/enregistrer"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="visible" />

        <Button
            android:id="@+id/medecinUserRegisterBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextUserFullName"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custtom_button_back"
            android:text="@string/enregistrer"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone" />


        <CheckBox
            android:id="@+id/isMedecin"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_alignBottom="@+id/editTextUserNumTel"
            android:layout_alignParentEnd="true"
            android:text="@string/médecin" />

    </RelativeLayout>




</ScrollView>