<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterUserActivity"
    android:background="@drawable/gradient_background">

    <EditText
        android:id="@+id/editTextUserNumTel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="100dp"
        android:ems="10"
        android:hint="numéro de téléphone"
        android:inputType="number"
        android:padding="5dp"
        android:textColorHint="@color/white"
        android:textSize="18sp"
        app:hintTextColor="@color/white" />
    <EditText
        android:id="@+id/editTextUserNumOrdre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextUserNumTel"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:hint="numéro d'ordre"
        android:inputType="text"
        android:padding="5dp"
        android:textColorHint="@color/white"
        android:textSize="18sp"
        app:hintTextColor="@color/white"
        android:visibility="gone"/>


    <ProgressBar
        android:id="@+id/userProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/progress_back"
        />

    <EditText
        android:id="@+id/editTextPatientUserCIN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextUserNumTel"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:hint="CIN"
        android:inputType="text"
        android:padding="5dp"
        android:textColorHint="@color/white"
        android:textSize="18sp"
        android:visibility="visible"
        app:hintTextColor="@color/white" />

    <EditText
        android:id="@+id/editTextUserFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextUserNumTel"
        android:layout_marginStart="20dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:hint="Nom Complet"
        android:inputType="text"
        android:padding="5dp"
        android:textColorHint="@color/white"
        android:textSize="18sp"
        android:visibility="visible"
        app:hintTextColor="@color/white" />

    <EditText
        android:id="@+id/editTextPatientUserAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextUserFullName"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:hint="Age"
        android:inputType="number"
        android:padding="5dp"
        android:textColorHint="@color/white"
        android:textSize="18sp"
        android:visibility="visible"
        app:hintTextColor="@color/white" />

    <EditText
        android:id="@+id/editTextPatientUserEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextPatientUserAge"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:hint="email"
        android:inputType="text"
        android:padding="5dp"
        android:textColorHint="@color/white"
        android:textSize="18sp"
        android:visibility="visible"
        app:hintTextColor="@color/white" />

    <EditText
        android:id="@+id/editTextPatientUserPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextPatientUserEmail"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:hint="mot de pass"
        android:inputType="textPassword"
        android:padding="5dp"
        android:textColorHint="@color/white"
        android:textSize="18sp"
        android:visibility="visible"
        app:hintTextColor="@color/white" />

    <EditText
        android:id="@+id/editTextPatientUserConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextPatientUserPassword"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:hint=" confirmer votre mot de pass"
        android:inputType="textPassword"
        android:padding="5dp"
        android:textColorHint="@color/white"
        android:textSize="18sp"
        android:visibility="visible"
        app:hintTextColor="@color/white" />

    <Button
        android:id="@+id/patientUserRegisterBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextPatientUserConfirmPassword"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/custtom_button_back"
        android:text="Enregistrer "
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="visible" />

    <Button
        android:id="@+id/medecinUserRegisterBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextUserFullName"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/custtom_button_back"
        android:text="Enregistrer "
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="gone" />


    <CheckBox
        android:id="@+id/isMedecin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextUserNumTel"
        android:layout_alignParentEnd="true"
        android:text="Medecin ?" />


</RelativeLayout>